---
import Footer from "@components/footer.astro"
import Navbar from "@components/navbar.astro"
import "@fontsource/inter/variable.css"

export interface Props {
  title?: string
  desc?: string
  ogimage?: string
}
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />

    <!-- Metadatos Open Graph -->
    <meta property='og:title' content='Descubre el Mundo y Viaja' />
    <meta
      property='og:description'
      content='Explora destinos increíbles y reserva tus próximas vacaciones con [Nombre de la Agencia de Viajes]. Ofrecemos paquetes personalizados, vuelos, hoteles y mucho más.'
    />

    <meta property='og:type' content='website' />
    <meta property='og:url' content='' />

    <!-- Metadatos de Twitter -->
    <meta name='twitter:card' content='summary_large_image' />
    <meta name='twitter:title' content='Descubre el Mundo y Viaja' />
    <meta
      name='twitter:description'
      content='Explora destinos increíbles y reserva tus próximas vacaciones. Ofrecemos paquetes personalizados, vuelos, hoteles y mucho más.'
    />
    <meta name='twitter:image' content='' />

    <!-- <meta property='og:url' content='' />
    <meta property='og:title' content='.' />
    <meta property='twitter:url' content='' />
    <meta property='twitter:title' content='.' /> -->

    <meta name='Robots' content='noindex,nofollow' />
    <meta http-equiv='cache-control' content='no-cache' />
    <meta http-equiv='expires' content='0' />
    <meta http-equiv='pragma' content='no-cache' />

    <!-- Primary Meta Tags -->
    <title>Viaja por el mundo | Agencia de viajes</title>
    <meta name='title' content='Agencia de viajes - Viaja por todo el mundo' />

    <meta
      name='description'
      content='Explora destinos increíbles y reserva tus próximas vacaciones. Ofrecemos paquetes personalizados, vuelos, hoteles y mucho más.'
    />

    <meta name="keywords" content="Agencia de viajes, Viajes, Reservas de vuelos, Reservas de hoteles, Paquetes vacacionales, Destinos turísticos, Viajes personalizados, Viajes de aventura, Viajes de lujo, Viajes familiares, Turismo internacional, Turismo nacional, Guías de viaje, Excursiones, Ofertas de viaje, Agente de viajes, Transporte turístico, Alojamiento vacacional, Actividades turísticas, Agencia de viajes online, Planificación de viajes, Consejos de viaje, Experiencias de viaje, Viajes de negocios, Viajes ecoturísticos">

    <!-- Google tag (gtag.js) -->
    <script
      async
      src='https://www.googletagmanager.com/gtag/js?id=AW-16545275155'></script>
    <script>
      window.dataLayer = window.dataLayer || []
      function gtag() {
        dataLayer.push(arguments)
      }
      gtag("js", new Date())

      gtag("config", "AW-16545275155")
    </script>
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
